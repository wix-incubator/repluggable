{
  "name": "@wix/repluggable",
  "version": "1.300.0",
  "license": "MIT",
  "description": "Allows composition of a React-with-Redux application entirely from a list of pluggable packages",
  "main": "dist/src/index.js",
  "module": "dist/es/src/index.js",
  "unpkg": true,
  "author": {
    "name": "Responsive FEDs",
    "email": "responsive-feds@wix.com"
  },
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/",
    "versionBumpStrategy": "patch"
  },
  "files": [
    "*"
  ],
  "scripts": {
    "start:dev": "webpack-dev-server --hot --config webpack.local.config.js",
    "build": "rm -rf dist && yarn build-cjs && yarn build-es && yarn build-bundle-dev && yarn build-bundle-prod",
    "build-cjs": "tsc --outDir dist --module commonjs",
    "build-es": "tsc --outDir dist/es --module esNext",
    "build-bundle-dev": "webpack --config webpack.dev.config.js",
    "build-bundle-prod": "webpack --config webpack.prod.config.js",
    "test": "jest --coverage",
    "posttest": "tslint --project . --format 'stylish'"
  },
  "dependencies": {
    "lodash": "^4.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^7.0.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.0.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.0.0",
    "@types/react": "^16.0.0",
    "@types/react-redux": "^7.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "husky": "^4.0.0",
    "jest": "^26.0.0",
    "jest-teamcity-reporter": "^0.9.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "terser-webpack-plugin": "^3.0.0",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.0.0",
    "tslint-consistent-codestyle": "^1.0.0",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-no-unused-expression-chai": "^0.1.0",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^5.0.0",
    "tslint-react-hooks": "^2.0.0",
    "typescript": "^3.0.0",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --project . --format 'stylish'"
    ]
  }
}
