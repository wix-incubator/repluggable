{
  "name": "@wix/repluggable",
  "version": "1.90.0",
  "license": "MIT",
  "description": "Allows composition of a React-with-Redux application entirely from a list of pluggable packages",
  "main": "dist/src/index.js",
  "unpkg": true,
  "author": {
    "name": "Responsive FEDs",
    "email": "responsive-feds@wix.com"
  },
  "publishConfig": {
    "registry": "http://npm.dev.wixpress.com/",
    "versionBumpStrategy": "patch"
  },
  "files": [
    "__tests__",
    "src",
    "dist",
    "testKit"
  ],
  "scripts": {
    "start": "yoshi start --no-server",
    "build": "yoshi build",
    "test": "yoshi test --coverage",
    "posttest": "yoshi lint",
    "test:performance": "perfer"
  },
  "dependencies": {
    "lodash": "^4.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^7.0.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.0",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.0.0",
    "@types/react": "^16.0.0",
    "@types/react-redux": "^7.0.0",
    "@wix/perfer": "latest",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.0.0",
    "husky": "^3.0.0",
    "jest-yoshi-preset": "^4.0.0",
    "lint-staged": "^9.0.0",
    "typescript": "^3.0.0",
    "yoshi": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yoshi lint --fix true",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-yoshi-preset"
  },
  "perfer": {
    "bundleSize": {
      "files": [
        "./dist/statics/repluggable.bundle.js",
        {
          "glob": "./dist/statics/repluggable.bundle.js",
          "maxSize": "15kb"
        }
      ]
    },
    "features": {
      "slackChannel": "responsive-ci"
    }
  }
}
